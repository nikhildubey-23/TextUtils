{
  "version": 2,
  "builds": [
    {
      "src": "requirements.txt",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "pip install -r requirements.txt"
      }
    },
    {
      "src": "manage.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "buildCommand": "pip install -r requirements.txt",
        "outputDirectory": "./",
        "functions": {
          "api/**/*.py": {
            "memory": 1024,
            "maxDuration": 10
          }
        }
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
}